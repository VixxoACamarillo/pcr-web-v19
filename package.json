{
  "name": "pcr-web-v19",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prebuild": "npm run sprites",
    "sprites": "echo 'SVG sprites will be configured in Phase 7'",
    "start": "ng serve",
    "start:dev": "node --max_old_space_size=5120 node_modules/@angular/cli/bin/ng.js serve",
    "start:prod": "npm run build:production && npm run server:start",
    "build": "ng build",
    "build:dev": "npm run prebuild && ng build --configuration=development",
    "build:validation": "npm run prebuild && ng build --configuration=validation",
    "build:production": "node --max_old_space_size=5120 node_modules/@angular/cli/bin/ng.js build --configuration=production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "echo 'Linting will be configured in Phase 8'",
    "server:start": "echo 'Node.js server will be configured in Phase 8'",
    "server:dev": "echo 'Development server will be configured in Phase 8'",
    "e2e": "echo 'E2E tests will be configured in Phase 9'",
    "e2e:validation": "echo 'E2E validation tests will be configured in Phase 9'",
    "e2e:staging": "echo 'E2E staging tests will be configured in Phase 9'",
    "analyze": "ng build --configuration=production --stats-json && npx webpack-bundle-analyzer dist/pcr-web-v19/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.6",
    "@angular/compiler": "^20.0.6",
    "@angular/core": "^20.0.6",
    "@angular/forms": "^20.0.6",
